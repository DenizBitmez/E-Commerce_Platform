@model ETicaretData.Entities.Product
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Silmek istediğinize eminmisiniz ?</h3>
<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Image" class="w-25" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stock)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsHome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsHome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsApproved)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsApproved)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </form>
</div>

<style>
    /* Genel stil */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
    }

    h1, h3, h4 {
        color: #343a40;
        font-weight: 700;
    }

    hr {
        border-top: 2px solid #dee2e6;
        margin-bottom: 20px;
    }

    .row {
        margin-bottom: 15px;
    }

    dt {
        font-weight: 600;
        color: #495057;
    }

    dd {
        color: #6c757d;
    }

    img {
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    /* Buton stilleri */
    .btn-danger {
        background-color: #dc3545; /* Kırmızı renk */
        border: none;
        padding: 10px 20px;
        font-size: 14px;
        font-weight: 500;
        border-radius: 4px;
        transition: all 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #c82333; /* Daha koyu kırmızı */
            transform: translateY(-2px);
        }

    .btn-back {
        display: inline-block;
        padding: 8px 16px;
        font-size: 14px;
        font-weight: 500;
        text-decoration: none;
        color: #fff;
        background-color: #6c757d; /* Gri renk */
        border: none;
        border-radius: 4px;
        transition: all 0.3s ease;
    }

        .btn-back:hover {
            background-color: #5a6268; /* Daha koyu gri */
            transform: translateY(-2px);
        }
</style>