@model ETicaretData.Entities.Product
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Image" class="w-25" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stock)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsHome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsHome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsApproved)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsApproved)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Back to List</a>
</div>

<style>
    /* Genel stil */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
    }

    h4 {
        color: #343a40;
        font-weight: 700;
        margin-bottom: 20px;
    }

    hr {
        border-top: 2px solid #dee2e6;
    }

    .row {
        margin-bottom: 15px;
    }

    dt {
        font-weight: 600;
        color: #495057;
    }

    dd {
        color: #6c757d;
    }

    img {
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    /* Buton stilleri */
    .btn-details {
        display: inline-block;
        padding: 8px 16px;
        font-size: 14px;
        font-weight: 500;
        text-decoration: none;
        border-radius: 4px;
        transition: all 0.3s ease;
    }

    .btn-edit {
        background-color: #ffc107; /* Sarı renk */
        color: #000;
        border: 1px solid #ffc107;
    }

        .btn-edit:hover {
            background-color: #e0a800; /* Daha koyu sarı */
            border-color: #e0a800;
            transform: translateY(-2px);
        }

    .btn-back {
        background-color: #6c757d; /* Gri renk */
        color: #fff;
        border: 1px solid #6c757d;
    }

        .btn-back:hover {
            background-color: #5a6268; /* Daha koyu gri */
            border-color: #5a6268;
            transform: translateY(-2px);
        }
</style>
