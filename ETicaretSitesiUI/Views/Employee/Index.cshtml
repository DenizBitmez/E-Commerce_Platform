@using ETicaretData.ViewModels
@model IEnumerable<EmployeeViewModel>

@{
    ViewData["Title"] = "Index";
}



<h2>Çalışanlar</h2>

<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Email</th>
            <th>Pozisyon</th>
            <th>İşe Başlama Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.Email</td>
                <td>@employee.Position</td>
                <td>@employee.HireDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@employee.EmployeeId" class="btn btn-primary">Düzenle</a> |
                    <a asp-action="Delete" asp-route-id="@employee.EmployeeId" class="btn btn-primary">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Yeni Çalışan Ekle</a>

